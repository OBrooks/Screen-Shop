<!-- Contact -->

<div class="contact">
  <div class="container">
    <div class="row">
      <!-- Sign Up -->
      <div class="col-lg-8 contact_col">
        <div class="get_in_touch">
          <div class="section_title">S'inscrire</div>
          <div class="contact_form_container">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            <div class="row">
              <div class="col-xl-6">
                <!-- Email -->
                <label for="contact_name">Email*</label>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "contact_name", class: "contact_input" %>
              </div>
              <div class="col-xl-6 last_name_col">
                <!-- Password -->
                <label for="contact_name">Mot de passe*</label>
                  <%= f.password_field :password, autocomplete: "current-password", id: "contact_name", class: "contact_input" %>
              </div>
            </div>
            <div class="row">
              <div class="col-xl-6">

              </div>
            </div>
            <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
            <button class="newsletter_button trans_200">
                <%= f.submit "S'enregistrer" %>
            </button>
            <div class="row ml-auto">
            <%= render "devise/shared/links" %>
            </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Infos -->
      <div class="col-lg-3 offset-xl-1 contact_col">
        <div class="contact_info">
          <div class="contact_info_section">
            <div class="contact_info_title">Livraison rapide !</div>
            <div>
              <img src="<%= asset_path 'fast-delivery.png' %>">
            </div>
          </div>
          <div class="contact_info_section">
            <div class="contact_info_title">Un probl√®me ? Contactez-nous !</div>
            <ul>
              <li>Phone: <span>+53 345 7953 3245</span></li>
              <li>Email: <span>yourmail@gmail.com</span></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>