<!-- Contact -->

<div class="contact">
  <div class="container">
    <div class="row">
      <!-- Inscription -->
      <div class="col-lg-8 contact_col">
        <div class="get_in_touch">
          <div class="section_title">S'inscrire</div>
          <div class="contact_form_container">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {:class => "contact_form", :id => "contact_form"}) do |f| %>
          <%= devise_error_messages! %>
            <div class="row">
              <div class="col-xl-6">
                  <!-- Name -->
                <label for="contact_name">Prénom*</label>
                  <%= f.text_field :first_name, autocomplete: "Prénom", id: "contact_name", class: "contact_input" %>
              </div>
              <div class="col-xl-6 last_name_col">
                  <!-- Email -->
                <label for="contact_last_name">Adresse Mail*</label>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "contact_name", class: "contact_input" %>
              </div>
            </div>
            <div class="row">
              <div class="col-xl-6">
                  <!-- Password -->
                <label for="contact_name">Mot de passe*</label>
                  <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> caractères minimum)</em>
                  <% end %>
                  <br/>
                  <%= f.password_field :password, autocomplete: "new-password", id: "contact_name", class: "contact_input" %>
              </div>
              <div class="col-xl-6 last_name_col">
                  <!-- Password confirmation -->
                  <%= f.label :password_confirmation %>*<br />
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", id: "contact_name", class: "contact_input" %>
              </div>
            </div>
              <button class="newsletter_button trans_200">
                <span>
                <%= f.submit "S'inscrire" %></span>
              </button>
            <% end %>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>

<!-- Infos -->
      <div class="col-lg-3 offset-xl-1 contact_col">
        <div class="contact_info">
          <div class="contact_info_section">
            <div class="contact_info_title">Livraison rapide !</div>
            <div>
              <img src="<%= asset_path 'fast-delivery.png' %>">
            </div>
          </div>
          <div class="contact_info_section">
            <div class="contact_info_title">Un problème ? Contactez-nous !</div>
            <ul>
              <li>Phone: <span>+53 345 7953 3245</span></li>
              <li>Email: <span>yourmail@gmail.com</span></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>