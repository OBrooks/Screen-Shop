<div class="home_contact">
    <div class="home_container_contact">
        <div class="home_background_contact" style="background-image:url(<%= asset_path 'images/contact.jpg'%>)"></div>
        <div class="home_content_container_contact">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <div class="home_content_contact">
                            <div class="breadcrumbs_contact">
                                <ul>
                                    <li><a href="/">Home</a></li>
                                    <li>Ajouter un produit</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Contact -->

<div class="contact">
    <div class="container">
        <div class="row">
            <!-- Inscription -->
            <div class="col-lg-8 contact_col">
                <div class="get_in_touch">
                    <div class="section_title">S'inscrire</div>
                    <div class="contact_form_container">
                        <%= form_for @product, url: {action: "create"} do |f| %>
                        <div class="row">
                            <div class="col-xl-12">
                                <!-- Name -->
                                <label for="contact_name">Nom du produit</label>
                                <%= f.text_field :product_name, class: "contact_input" %>
                            </div>
                            <div class="col-xl-12 last_name_col">
                                <!-- Email -->
                                <label for="contact_last_name">Description</label>
                                    <%= f.text_field :description, class: "contact_input contact_textarea" %>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xl-12">
                            <span><%= f.label "Image du produit" %><br /></span>
                                <%= f.file_field :product_picture %>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xl-12 select_category">
                                <!-- Category selection-->
                                <%= f.label :category_id, "Catégorie" %><br />
                                <div class="select_category_container">
                                    <%= f.collection_select :category_id, Category.order(:category_name), :id, :category_name, include_blank: true %>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xl-6 select_category">
                                <!-- Brand selection -->
                                <%= f.label :phone_brand_id, "Marque" %><br />
                                <div class="select_category_container">
                                    <%= f.collection_select :phone_brand_id, PhoneBrand.order(:brand), :id, :brand, include_blank: true %>
                                </div>
                            </div>
                            <div class="col-xl-6 last_name_col select_category">
                                <!-- Model selection-->
                                <%= f.label :phone_model_id, "Modèle" %><br />
                                    <div class="select_category_container">
                                        <%= f.grouped_collection_select :phone_model_id, PhoneBrand.order(:brand), :phone_models, :brand, :id, :model, include_blank: true %>
                                    </div>
                            </div>
                        </div>
                        <div clas ="row">
                            <div class="col-xl-6 select_quantity"></div>
                                <%= f.label :price, "Prix" %>
                                <div class="select_quantity_container">
                                    <%= f.number_field(:price, min: 0.01..99999999.0, step: 0.01) %>
                                </div>
                            </div>
                            <div class="col-xl-6 last_name_col select_quantity"></div>
                                <%= f.label :quantity, "Quantité" %>
                                <div class="select_quantity_container">
                                    <%= f.number_field(:quantity, in: 1.0..20.0, step: 1) %>
                                </div>
                            </div>
                        </div>
                        <button class="newsletter_button trans_200">
                            <span>
                                <%= f.submit "Ajouter" %></span>
                        </button>
                        <% end %>
                    </div>
                </div>
            </div>

            <!-- Infos -->
            <div class="col-lg-3 offset-xl-1 contact_col">
                <div class="contact_info">
                    <div class="contact_info_section">
                        <div class="contact_info_title">Livraison rapide !</div>
                        <div>
                            <img src="<%= asset_path 'fast-delivery.png' %>">
                        </div>
                    </div>
                    <div class="contact_info_section">
                        <div class="contact_info_title">Un problème ? Contactez-nous !</div>
                        <ul>
                            <li>Phone: <span>+53 345 7953 3245</span></li>
                            <li>Email: <span>yourmail@gmail.com</span></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>